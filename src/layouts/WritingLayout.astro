---
import MainLayout from "./MainLayout.astro";
---

<MainLayout title="nicolo.se" titleLink="/">
  <p><a href="/writing">All posts</a></p>
  <slot />
  <style is:global>
    img {
      object-fit: contain;
      width: 100%;
      height: auto;
    }
    img + em {
      display: block;
      text-align: center;
      margin-top: 0.5rem;
      margin-bottom: 2rem;
      font-size: 0.9rem;
    }
    pre code,
    code {
      font-size: 0.875rem;
    }
  </style>
</MainLayout>
